<html>
  <head>


  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <%= csrf_meta_tags %>
    <title>MonkaCorona</title>
  </head>


  <body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Monka Corona</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><a id="new" href="#"> New</a></li>
        <li><a id="sims" > Sims</a></li>
      </ul>
    </div>
  </nav>

    <%# Form for creating a new simulation %>
    <div id="simulation-form-container">
      <form id="simulation-form">
        <label>Name</label>
        <input id="name" type="string">
        <br>
        <label>Initial Infected</label>
        <input id="infected" type="number">
        <br>
        <label>Initial Population</label>
        <input id="population" type="number">
        <br>
        <input id="form-submit" type="submit">
      </form>
    </div>

    <%# Map where all the magic happens %>
    <div id="map-container">
      <canvas id="map", width="1090", height="770"></canvas>
      <%# Info about the current simulation %>
      <div id="control-panel">
        <h2 id="sim-name"></h2>
        <h4 id="sim-population"></h4>
        <h4 id="sim-healthy"></h4>
        <h4 id="sim-infected"></h4>
        <h4 id="sim-deaths"></h4>
        <button id="run-btn">Run Simulation</button>
        <button id="stop-btn">Stop Simulation</button>
      </div>
    </div>

    <%# Index of all the simulations %>
    <div id="scrollbox">
      <%# Insert simulation list items here with JS %>
    </div>

    <%= javascript_pack_tag "corona" %>
  </body>
</html>
